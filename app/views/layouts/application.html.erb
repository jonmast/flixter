<!DOCTYPE html>
<html>
<head>
  <title>Flixter</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= stylesheet_link_tag 'http://vjs.zencdn.net/5.0.0/video-js.css' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
  <%= render 'layouts/header' %>
  <div class="container">
    <p class="notice">
      <%= notice %>
    </p>
    <p class="alert">
      <%= alert %>
    </p>
  <%= yield %>
  </div>

  <div class="footer">
    <div class="container">
      <div class="col-xs-12 col-sm-3">
        <b>Teachers</b>
        <br />
        <%= link_to 'Teach a Course', new_instructor_course_path %>
        <br />
        <%= link_to 'My Dashboard', dashboard_path %>
      </div>
      <div class="col-xs-12 col-sm-3">
        <b>About</b>
        <br />
        <%= link_to 'Team', '#' %>
        <br />
        <%= link_to 'Careers', '#' %>
        <br />
        <%= link_to 'Privacy Policy', '#' %>
      </div>
      <div class="col-xs-12 col-sm-3">
        <b>Contact</b>
        <br />
        ken@thefirehoseproject.com
        <br />
        One Kendall Square
        <br />
        Cambridge MA, 02113
      </div>
      <div class="col-xs-12 col-sm-3">
        <b>Social</b>
        <div class="social-buttons">
          <%= link_to 'https://github.com/jonmast' do %>
            <%= image_tag 'github.svg',   height: '32' %>
          <% end %>
          <%= image_tag 'facebook.svg', height: '32' %>
          <%= image_tag 'twitter.svg',  height: '32' %>
        </div>
      </div>
    </div>
  </div>
  <%= javascript_include_tag 'http://vjs.zencdn.net/5.0.0/video.js' %>
</body>
</html>
