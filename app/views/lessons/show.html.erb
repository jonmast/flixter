<br />

<div class="booyah-box col-xs-10 col-xs-offset-1">
  <div class="clearfix">
    <h1><%= current_lesson.title %></h1>
    <p class="pull-left">
      <%= current_lesson.subtitle %>
    </p>
    <% if current_lesson.next_lesson.present? %>
      <%= link_to current_lesson.next_lesson, class: 'btn btn-default pull-right' do %>
        Next Lesson &nbsp;
        <span class="glyphicon glyphicon-forward"></span>
      <% end %>
    <% end %>
  </div>
  <video src="<%= current_lesson.video %>" class='video-js vjs-default-skin vjs-big-play-centered vjs-fluid' controls preload="auto" data-setup="{}">
    <p class="vjs-no-js">
      To view this video please enable JavaScript, and consider upgrading to a web browser that
      <a href="http://videojs.com/html5-video-support/" target="_blank">supports HTML5 video</a>
    </p>
  </video>
</div>
